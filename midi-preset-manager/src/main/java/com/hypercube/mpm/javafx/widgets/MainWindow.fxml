<?xml version="1.0" encoding="UTF-8"?>

<?import com.hypercube.mpm.javafx.widgets.browser.PatchBrowser?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" stylesheets="@MainWindow.css" type="GridPane"
         xmlns="http://javafx.com/javafx/17.0.12">
    <children>
        <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="600.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Close"/>
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem fx:id="updateCategoriesMenuItem" text="Update Categories..."
                                  onAction="#onUpdateCategories"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <PatchBrowser GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS"/>
        <HBox GridPane.rowIndex="2">
            <Label text="${controller.model.info}">
                <padding>
                    <Insets left="10.0"/>
                </padding>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label minWidth="100.0" text="${controller.model.eventInfo}">
                <padding>
                    <Insets right="10.0"/>
                </padding>
            </Label>
        </HBox>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</fx:root>
