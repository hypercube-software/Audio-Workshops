<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" styleClass="mpmDialogShadow"
         stylesheets="@../../MainWindow.css,@../DialogCommon.css,@DevicesPortsDialog.css" type="GridPane"
         xmlns="http://javafx.com/javafx/17.0.12">
    <GridPane styleClass="mpmDialog">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" minWidth="500.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="20.0"/>
            <RowConstraints minHeight="50.0"/>
            <RowConstraints/>
            <RowConstraints minHeight="50.0"/>
            <RowConstraints minHeight="20.0"/>
        </rowConstraints>
        <Label fx:id="textHeader" pickOnBounds="false" text="Midi Device Library" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="40.0" right="40.0"/>
            </GridPane.margin>
        </Label>
        <TableView fx:id="deviceList" editable="true" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colBrand" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Brand"
                             userData="brand"/>
                <TableColumn fx:id="colName" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Name"
                             userData="deviceName"/>
                <TableColumn fx:id="colMidiIn" prefWidth="200" style="-fx-alignment: CENTER;" text="Midi In"
                             userData="inputMidiDevice"/>
                <TableColumn fx:id="colMidiOut" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Midi Out"
                             userData="outputMidiDevice"/>
                <TableColumn fx:id="colDAWOut" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Daw Out"
                             userData="dawMidiDevice"/>
            </columns>
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </TableView>
        <HBox alignment="CENTER" spacing="20.0" GridPane.rowIndex="3">
            <Button minWidth="100.0" onAction="#onSaveButton" text="Save to disk">

            </Button>
            <Button minWidth="100.0" onAction="#onCancelButton" text="Cancel">

            </Button>
            <GridPane.margin>
                <Insets top="40.0"/>
            </GridPane.margin>
        </HBox>
    </GridPane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</fx:root>
