<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" styleClass="mpmDialogShadow"
         stylesheets="@../../MainWindow.css,@../DialogCommon.css,@./GenericDialog.css" type="GridPane" xmlns="http://javafx.com/javafx/17.0.12">
    <GridPane styleClass="mpmDialog">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" minWidth="500.0"/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="20.0"/>
            <RowConstraints minHeight="50.0"/>
            <RowConstraints minHeight="20.0"/>
        </rowConstraints>
        <Label fx:id="textHeader" pickOnBounds="false" text="Dialog Header" GridPane.halignment="LEFT"
               GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets left="10.0" top="20.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="textMessage" text="message" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="40.0" right="40.0"/>
            </GridPane.margin>
        </Label>
        <FontIcon fx:id="icon" iconColor="#437fff" iconLiteral="mdrmz-warning" iconSize="64" GridPane.columnIndex="1"
                  GridPane.rowIndex="0" GridPane.rowSpan="2">
            <GridPane.margin>
                <Insets right="20.0"/>
            </GridPane.margin>
        </FontIcon>
        <Button minWidth="100.0" onAction="#onCloseButton" text="Ok" GridPane.columnSpan="2" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="20.0" top="40.0"/>
            </GridPane.margin>
        </Button>

    </GridPane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</fx:root>
