<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: transparent;" stylesheets="@../MainWindow.css"
         type="GridPane" xmlns="http://javafx.com/javafx/17.0.12">
    <GridPane styleClass="genericDialog">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" minWidth="500.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="20.0"/>
            <RowConstraints minHeight="50.0"/>
            <RowConstraints/>
            <RowConstraints minHeight="50.0"/>
            <RowConstraints minHeight="20.0"/>
        </rowConstraints>
        <Label fx:id="textHeader" pickOnBounds="false" text="Header" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Label>
        <Label fx:id="textMessage" text="message" GridPane.halignment="CENTER"
               GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="40.0" right="40.0"/>
            </GridPane.margin>
        </Label>
        <Button minWidth="100.0" onAction="#onCloseButton" text="Ok" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets top="40.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</fx:root>
