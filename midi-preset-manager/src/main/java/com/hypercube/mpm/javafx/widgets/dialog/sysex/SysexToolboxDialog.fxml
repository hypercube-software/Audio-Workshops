<?xml version="1.0" encoding="UTF-8"?>

<?import com.hypercube.mpm.javafx.widgets.hexa.HexaDataViewer?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" styleClass="mpmDialogShadow"
         stylesheets="@../../MainWindow.css,@../DialogCommon.css,@SysexToolboxDialog.css" type="GridPane"
         xmlns="http://javafx.com/javafx/17.0.12">
    <!-- DEFINE PROPERTY String:errorMessage -->
    <GridPane styleClass="mpmDialog" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" minWidth="500.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="50.0"/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints maxHeight="500.0" minHeight="50.0"/>
            <RowConstraints minHeight="40.0"/>
        </rowConstraints>
        <Label fx:id="textHeader" pickOnBounds="false" text="Device Toolbox" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Label>
        <HBox spacing="10.0" GridPane.rowIndex="1">
            <Label minWidth="100.0">Device:</Label>
            <ComboBox fx:id="deviceSelector" minWidth="200.0"/>
            <Button minWidth="100.0" onAction="#onReloadMidiDeviceLibrary">Reload</Button>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="2">
            <Label minWidth="100.0">Command:</Label>
            <TextField fx:id="textCommand" onKeyPressed="#onCommandKeyPress" text="F0 00 01 05 21 00 01 05 01 00 F7"
                       HBox.hgrow="ALWAYS">
            </TextField>
            <CheckBox fx:id="unpackCheckBox" text="Unpack"/>
            <Button minWidth="100.0" onAction="#onSendCommand">Send</Button>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="3">
            <Label GridPane.halignment="LEFT">Request:</Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label styleClass="error-message" text="${controller.view.errorMessage}"/>
        </HBox>
        <HexaDataViewer fx:id="hexCommand" gridHeight="2" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS"/>

        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="5">
            <Label fx:id="responseLabel" GridPane.halignment="LEFT">Response:</Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="${hexResponse.selection}"/>
        </HBox>
        <HexaDataViewer fx:id="hexResponse" gridHeight="10" minHeight="400.0" selectionEnd="0" selectionStart="0"
                        GridPane.rowIndex="6" GridPane.vgrow="ALWAYS"/>
        <HBox alignment="CENTER" spacing="20.0" GridPane.rowIndex="7">
            <Button minWidth="100.0" onAction="#onSaveButton" text="Save to disk">

            </Button>
            <Button minWidth="100.0" onAction="#onCancelButton" text="Cancel">

            </Button>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </HBox>
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
    </GridPane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</fx:root>
