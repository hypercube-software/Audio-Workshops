<?xml version="1.0" encoding="UTF-8"?>

<?import com.hypercube.mpm.javafx.widgets.patch.PatchScore?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<fx:root type="GridPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0"/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <HBox alignment="CENTER" spacing="10.0" GridPane.hgrow="ALWAYS">
            <children>
                <Label text="Patches:"/>
                <TextField fx:id="searchBox" disable="false" editable="true" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <opaqueInsets>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                    </opaqueInsets>
                </TextField>
                <PatchScore fx:id="scoreFilter" alignment="CENTER"
                            score="${controller.model.root.currentPatchScoreFilter}"/>
            </children>
            <GridPane.margin>
                <Insets left="5.0" right="10.0"/>
            </GridPane.margin>
            <padding>
                <Insets bottom="5.0" top="5.0"/>
            </padding>
        </HBox>
        <ListView fx:id="patchList"
                  onMouseClicked="#onMouseClicked"
                  onKeyReleased="#onKeyReleased"
                  GridPane.rowIndex="1" GridPane.vgrow="ALWAYS"/>
    </children>
</fx:root>
