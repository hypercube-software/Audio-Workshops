<?xml version="1.0" encoding="UTF-8"?>

<?import com.hypercube.mpm.javafx.widgets.button.IconButton?>
<?import com.hypercube.mpm.javafx.widgets.patch.PatchScore?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" styleClass="header" type="GridPane" stylesheets="@../MainWindow.css"
         xmlns="http://javafx.com/javafx/17.0.12">
    <columnConstraints>
        <ColumnConstraints minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0"/>
        <RowConstraints minHeight="-Infinity" prefHeight="421.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <HBox alignment="CENTER" spacing="10.0" styleClass="attributeSelectorHeader"
          GridPane.hgrow="ALWAYS">
        <children>
            <PatchScore fx:id="scoreFilter" alignment="CENTER" score="${controller.model.currentPatchScoreFilter}"/>
            <Label styleClass="PatchFilter" text="Patch name:"/>
            <TextField fx:id="searchBox" disable="false" editable="true" HBox.hgrow="ALWAYS" onAction="#onSearch">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <opaqueInsets>
                    <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                </opaqueInsets>
            </TextField>
            <IconButton onAction="#onSaveSysEx" iconClass="icon-backup" tooltipText="Save Patch"/>
            <IconButton onAction="#onRestoreSysEx" iconClass="icon-restore" tooltipText="Restore SysEx"/>
        </children>
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </padding>
    </HBox>
    <TableView fx:id="patchList" editable="true" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colScore" maxWidth="120.0" minWidth="120" text="Score"/>
            <TableColumn fx:id="colName" prefWidth="259.0" text="Name"/>
            <TableColumn fx:id="colCategory" maxWidth="120.0" minWidth="120" style="-fx-alignment: CENTER;"
                         text="Category"/>
            <TableColumn fx:id="colMode" prefWidth="58.0" style="-fx-alignment: CENTER;" text="Mode"/>
            <TableColumn fx:id="colBank" prefWidth="58.0" style="-fx-alignment: CENTER;" text="Bank"/>
            <TableColumn fx:id="colCommand" prefWidth="58.0" style="-fx-alignment: CENTER;" text="Command"/>
        </columns>
    </TableView>
</fx:root>
